                                <TextBlock Grid.Row="7" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Grade/Level:</TextBlock>
                                <TextBlock Text="{Binding Staff.Level.Id}" Grid.Row="7" Grid.Column="1" Foreground="Navy" VerticalAlignment="Center"></TextBlock>

                                <TextBlock Grid.Row="8" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Location:</TextBlock>
                                <TextBlock Text="{Binding Staff.Location.Name}" Grid.Row="8" Grid.Column="1" Foreground="Navy" VerticalAlignment="Center"></TextBlock>
                            </Grid>
                       </Border>

