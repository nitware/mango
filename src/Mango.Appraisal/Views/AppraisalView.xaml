                        <TextBlock Margin="0,10,0,0" Grid.Column="0" Grid.Row="2" FontWeight="Bold" FontSize="13" Foreground="DarkGray">Appraisee Information</TextBlock>
                        <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" BorderThickness="0,2,0,0" BorderBrush="LightGray">
