                    ItemsSource="{Binding Metrices.Risks, Mode=TwoWay}"
                    CellStyle="{StaticResource NoSelectionDataGridCellStyle}"
                       
		            VerticalAlignment="Top"
                    BorderThickness="0,0,0,0" 
                    Background="{x:Null}" 
		            BorderBrush="{x:Null}" 
                    GridLinesVisibility="None" 
                    AreRowDetailsFrozen="True">

                        <sdk:DataGrid.Columns>
                            <sdk:DataGridTemplateColumn  Header="Kpi" Width="230">
                                <sdk:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Kpi}" />
                                    </DataTemplate>
                                </sdk:DataGridTemplateColumn.CellTemplate>
                            </sdk:DataGridTemplateColumn>

                            <sdk:DataGridTemplateColumn Header="Measure" Width="255">
                                <sdk:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Measure}" />
                                    </DataTemplate>
                                </sdk:DataGridTemplateColumn.CellTemplate>
                            </sdk:DataGridTemplateColumn>

                            <sdk:DataGridTemplateColumn Header="Target" Width="80">
                                <sdk:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Target}" />
                                    </DataTemplate>
                                </sdk:DataGridTemplateColumn.CellTemplate>
                            </sdk:DataGridTemplateColumn>

                            <sdk:DataGridTemplateColumn Header="Score" Width="50">
                                <sdk:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Score}" />
                                    </DataTemplate>
                                </sdk:DataGridTemplateColumn.CellTemplate>
                            </sdk:DataGridTemplateColumn>

                            <sdk:DataGridTemplateColumn Header="Grade" Width="110">
                                <sdk:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Margin="40,0,0,0" TextWrapping="Wrap" Text="{Binding Rating}" />
                                    </DataTemplate>
                                </sdk:DataGridTemplateColumn.CellTemplate>
                            </sdk:DataGridTemplateColumn>
                        </sdk:DataGrid.Columns>
                        
                    </sdk:DataGrid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding Metrices.RiskSumTotal}" Margin="0,0,17,0" Width="70" HorizontalAlignment="Right" FontSize="14" FontWeight="Bold" FontStyle="Italic"></TextBlock>
                        <TextBlock Text="{Binding Metrices.RiskActualScoreTotal}" Margin="0,0,17,0" Width="70" HorizontalAlignment="Right" FontSize="14" FontWeight="Bold" FontStyle="Italic"></TextBlock>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>

        <TextBlock VerticalAlignment="Bottom" Height="auto" Grid.Row="10" Margin="12,10,0,0" FontWeight="Bold" FontSize="20" Foreground="#FFF3A903" FontStyle="Italic" >COMMENT</TextBlock>
        <Border Margin="0,2,0,0" Grid.Row="11" BorderThickness="0,5,0,0" BorderBrush="#FFF3A903">
            <Border Margin="12,1,0,0" Grid.Row="5" BorderThickness="0,0,0,1" BorderBrush="Black">
                <StackPanel Orientation="Vertical" Height="auto" >
            <Grid HorizontalAlignment="Left" Width="auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center">Strengths:</TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center">Weakness:</TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center">Training Needs:</TextBlock>
                <TextBlock Grid.Row="3" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center">Supervisor Comment:</TextBlock>
                <TextBlock Grid.Row="4" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center">Appraisee Comment:</TextBlock>
                <TextBlock Grid.Row="5" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center">HOD's Comment:</TextBlock>
                <TextBlock Grid.Row="6" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center">Recommendations:</TextBlock>


                        <TextBox Text="{Binding Comment.Strenght, Mode=TwoWay}" IsEnabled="{Binding IsStrenghtAndWeakness, Converter={StaticResource EnabilityConverter}}" Grid.Row="0" Margin="0,5" Grid.Column="1" Width="500" MinHeight="50" TextWrapping="Wrap"></TextBox>
                        <TextBox Text="{Binding Comment.Weakness, Mode=TwoWay}" IsEnabled="{Binding IsStrenghtAndWeakness, Converter={StaticResource EnabilityConverter}}" Grid.Row="1" Margin="0,5" Grid.Column="1" Width="500" MinHeight="50" TextWrapping="Wrap"></TextBox>
                        <TextBox Text="{Binding Comment.TrainingNeed, Mode=TwoWay}" IsEnabled="{Binding IsTrainingNeeds, Converter={StaticResource EnabilityConverter}}" Grid.Row="2" Margin="0,5" Grid.Column="1" Width="500" MinHeight="50" TextWrapping="Wrap"></TextBox>
                        <TextBox Text="{Binding Comment.SupervisorComment, Mode=TwoWay}" IsEnabled="{Binding IsSupervisorComment, Converter={StaticResource EnabilityConverter}}" Grid.Row="3" Margin="0,5" Grid.Column="1" Width="500" MinHeight="50" TextWrapping="Wrap"></TextBox>
                        <TextBox Text="{Binding Comment.AppraiseeComment, Mode=TwoWay}" IsEnabled="{Binding IsAppraiseeComment, Converter={StaticResource EnabilityConverter}}" Grid.Row="4" Margin="0,5" Grid.Column="1" Width="500" MinHeight="50" TextWrapping="Wrap"></TextBox>
                        <TextBox Text="{Binding Comment.HodComment, Mode=TwoWay}" IsEnabled="{Binding IsHodComment, Converter={StaticResource EnabilityConverter}}" Grid.Row="5" Margin="0,5" Grid.Column="1" Width="500" MinHeight="50" TextWrapping="Wrap"></TextBox>

                <StackPanel Margin="0,5,0,4" Orientation="Vertical" Grid.Row="6" Grid.Column="1">
                            <ComboBox ItemsSource="{Binding RecommendationsView, Mode=TwoWay}" IsEnabled="{Binding IsRecommendation, Converter={StaticResource EnabilityConverter}}" SelectedValuePath="Id" SelectedValue="{Binding Comment.RecommendationId}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <TextBlock Grid.Row="7" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center">Option:</TextBlock>

                <StackPanel Margin="0,5,0,4" Orientation="Vertical" Grid.Row="7" Grid.Column="1">
                            <ComboBox Margin="0,0,0,10" ItemsSource="{Binding OptionsView, Mode=TwoWay}" IsEnabled="{Binding IsOption, Converter={StaticResource EnabilityConverter}}" SelectedValuePath="Id" SelectedValue="{Binding Id}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                        
                    </Grid>
        </StackPanel>
            </Border>
        </Border>

        <toolkit:BusyIndicator Grid.Row="12" Margin="173,5,70,0" IsBusy="{Binding IsProcessing, Converter={StaticResource EnabilityConverter}}" VerticalContentAlignment="Center" >
            <StackPanel Orientation="Horizontal">
                <Button Margin="0,5,0,0" commands:Click.Command="{Binding ButtonClickCommand}" IsEnabled="{Binding IsOption, Converter={StaticResource EnabilityConverter}}" Content="Submit"  Height="34" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Cursor="Hand" FontSize="12" />
                <Button Margin="3,5,0,0" commands:Click.Command="{Binding SaveCommand}" Visibility="{Binding SaveToContinueLater, Converter={StaticResource BooleanToVisibilityConverter}}" Content="Save, To Continue Later"  Height="34" HorizontalAlignment="Left" VerticalAlignment="Top"  Cursor="Hand" FontSize="12" />

                <!--IsEnabled="{Binding IsStrenghtAndWeakness, Converter={StaticResource EnabilityConverter}}"-->
