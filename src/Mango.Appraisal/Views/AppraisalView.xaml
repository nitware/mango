                                <TextBlock Grid.Row="1" Grid.Column="1" FontSize="13"  FontWeight="Bold" Foreground="DimGray" Width="120" TextAlignment="Center" VerticalAlignment="Center">RATING SCALE</TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="1" FontSize="12" Foreground="Gray" FontWeight="Bold" Width="90" TextAlignment="Center" VerticalAlignment="Center">0 - 50</TextBlock>
