                                <TextBlock Grid.Row="5" Grid.Column="1" FontSize="12" Foreground="Gray" FontWeight="Bold" Width="90" TextAlignment="Center" VerticalAlignment="Center">85 - 94</TextBlock>
                                <TextBlock Grid.Row="6" Grid.Column="1" FontSize="12" Foreground="Gray" FontWeight="Bold" Width="90" TextAlignment="Center" VerticalAlignment="Center">> 94</TextBlock>

                                <TextBlock Grid.Row="1" Grid.Column="3" Width="120" FontSize="13" Foreground="DimGray" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Normal">PACE RATING</TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="3" Width="50" FontSize="12" Foreground="Gray" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center">D</TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="3" Width="50" FontSize="12" Foreground="Gray" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center">C</TextBlock>
                                <TextBlock Grid.Row="4" Grid.Column="3" Width="50" FontSize="12" Foreground="Gray" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center">B</TextBlock>
                                <TextBlock Grid.Row="5" Grid.Column="3" Width="50" FontSize="12" Foreground="Gray" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">A</TextBlock>
                                <TextBlock Grid.Row="6" Grid.Column="3" Width="50" FontSize="12" Foreground="Gray" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">A+</TextBlock>

                                <Grid.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Gainsboro" Offset="0" />
                                        <GradientStop Color="LightGray" Offset="0.982" />
                                        <GradientStop Color="White" Offset="0.287" />
                                        <GradientStop Color="#FEF4F4F4" Offset="0.611" />
                                    </LinearGradientBrush>
                                </Grid.Background>
                            </Grid>
                        </Border>
                        
                        
                        
