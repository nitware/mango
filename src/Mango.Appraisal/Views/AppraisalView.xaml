            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="103*" />
        </Grid.RowDefinitions>

        <TextBlock VerticalAlignment="Bottom" Height="auto" Visibility="{Binding IsAppraiseePresent, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="12,19,0,0" FontWeight="Bold" FontSize="20" FontStyle="Italic" Foreground="#FFF3A903">APPRAISEES UNDER ME</TextBlock>
        <Border Visibility="{Binding IsAppraiseePresent, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,2,0,0" Grid.Row="1"  BorderThickness="0,5,0,0" BorderBrush="#FFF3A903">
            <Border Margin="12,0,0,0" Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="Black">
                <StackPanel Orientation="Vertical" Height="50"  >
                    <ComboBox Margin="15,15,15,0" VerticalAlignment="Center" Background="#FFf" ItemsSource="{Binding StaffsView, Mode=TwoWay}" SelectedValuePath="Id" SelectedValue="{Binding Id}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="Bold" FontFamily="Arial" Foreground="#FF413E3E" FontSize="13" Width="60" Text="{Binding Id}"></TextBlock>
                                    <TextBlock FontWeight="Bold" FontFamily="Arial" Foreground="#FF413E3E" FontSize="13" TextWrapping="Wrap" Width="300" Text="{Binding Name}"></TextBlock>
                                    <TextBlock FontWeight="Bold" FontFamily="Arial" Foreground="#FF413E3E" FontSize="13" Width="120" Text="{Binding JobRoleLevelId}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#562684" Offset="0" />
                            <GradientStop Color="LightGray" Offset="0.982" />
                            <GradientStop Color="White" Offset="0.287" />
                            <GradientStop Color="#562684" Offset="0.611" />
                        </LinearGradientBrush>
                    </StackPanel.Background>

                    <!--#562684-->
                    
