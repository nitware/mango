                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Status:</TextBlock>
                                <TextBlock Text="{Binding Appraisal.Status.Name, Mode=TwoWay}" FontSize="15" Grid.Row="0" Grid.Column="1" Foreground="{Binding Appraisal.Status.Name, Converter={StaticResource StatusTextToColorConverter}}" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                                
