                        <TextBlock Margin="0,7,0,0" Grid.Column="1" Grid.Row="2" FontWeight="Bold" FontSize="13" Foreground="DarkGray">Score Summary</TextBlock>
                        <Border Grid.Column="1" Grid.Row="3" BorderThickness="0,2,0,0" BorderBrush="LightGray">
