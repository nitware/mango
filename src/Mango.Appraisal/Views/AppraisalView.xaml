                                <TextBlock Grid.Row="3" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Supervisor:</TextBlock>
                                <TextBlock Margin="0,0,5,0" Text="{Binding StaffSupervisor.Name}" Grid.Row="3" Grid.Column="1" Foreground="Navy" VerticalAlignment="Center"></TextBlock>

                                <TextBlock Grid.Row="4" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Company:</TextBlock>
                                <TextBlock Margin="0,0,15,0" Text="{Binding Staff.Company.Name}" TextWrapping="Wrap" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="1" Foreground="Navy" VerticalAlignment="Center"></TextBlock>

                                <TextBlock Grid.Row="5" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Department/Unit:</TextBlock>
                                <TextBlock Margin="0,0,5,0" Text="{Binding Staff.Department.Name}" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="5" Grid.Column="1" Foreground="Navy" VerticalAlignment="Center"></TextBlock>

                                <TextBlock Grid.Row="6" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Job Role:</TextBlock>
