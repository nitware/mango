                            <GradientStop Color="#FEF4F4F4" Offset="0.611" />
                        </LinearGradientBrush>
                    </StackPanel.Background>-->

                </StackPanel>
            </Border>
        </Border>

        <TextBlock VerticalAlignment="Bottom" Height="auto" Margin="12,5,0,0" Grid.Row="2"  FontWeight="Bold" FontSize="20" FontStyle="Italic" Foreground="#FFF3A903">APPRAISAL DETAIL</TextBlock>
        <Border Margin="0,2,0,0"  Grid.Row="3"  BorderThickness="0,5,0,0" BorderBrush="#FFF3A903">
            <Border Margin="12,0,0,0" BorderThickness="0,0,0,0" BorderBrush="Black">
