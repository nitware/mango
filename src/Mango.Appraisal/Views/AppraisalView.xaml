                                <TextBlock Grid.Row="3" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Appraisal Type:</TextBlock>
                                <TextBlock Grid.Row="5" Grid.Column="0" Width="120" FontWeight="Bold" VerticalAlignment="Center">Start Date:</TextBlock>
